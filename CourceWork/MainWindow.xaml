            <Button  x:Name="buy_btn" FontSize="20" Click="Buy_btn_Click" Margin="0 250 0 0" Width="40" Height="40">
                <Button.Background>
                    <ImageBrush ImageSource="C:\Users\Melnyk Eduard\source\repos\CourceWork\CourceWork\Korzina.png"/>
                </Button.Background>
            </Button>


        </StackPanel>
        <Frame Width="750" VerticalAlignment="Center" HorizontalAlignment="Right" Panel.ZIndex="0" Name="frame" Grid.Column="1" >

        </Frame>
    </Grid>
